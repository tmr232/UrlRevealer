{
  "name": "UrlRevealer",
  "version": "1.0",
  "description": "No more URL redirections!",
  
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  
  "permissions": ["webRequest", "webRequestBlocking",
                  "*://tinyurl.com/*", "*://bit.ly/*"],
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mutation_summary.js", "revealer.js"]
    }
  ],

  "manifest_version": 2
}
