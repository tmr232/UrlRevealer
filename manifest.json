{
  "name": "UrlRevealer",
  "version": "1.0",
  "description": "No more tiny URLs!",
  "permissions": ["webRequest", "webRequestBlocking",
                  "*://tinyurl.com/*", "*://bit.ly/*"],
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mutation_summary.js", "revealer.js"]
    }
  ],

  "manifest_version": 2
}
